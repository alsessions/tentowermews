{% extends "_layouts/_layout.twig" %}

   {% block content %}
   <div class="w-full bg-slate-800 py-6 md:py-20">
    <div class="py-4 md:py-10 px-2 prose-h1:mb-2 prose-h3:mt-0 md:prose-h3:mt-4 prose-h1:text-white prose-h3:text-white mx-auto max-w-4xl">
    <h1>{{ entry.title }}</h1>
    <h3>{{ entry.bookAuthor }} &nbsp;|&nbsp; {{ entry.publishedYear}} &nbsp;|&nbsp; <a href="{{ entry.download }}" target="_blank" title="Download link"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mb-1 inline-block text-blue-200 hover:text-blue-900">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
    </svg>
    </a></h3>
</div>
   </div>
  

    
   <div class="mt-10 min-h-screen max-w-4xl mx-auto">

      <div class="md:grid md:grid-cols-6 gap-10 prose-h2:mb-2 prose-h2:mt-6  max-w-none md:mb-20">
        <div class="col-span-2">

{% if entry.bookcover | length %}
          {% for cover in entry.bookcover.all() %}
          <div>
           
        <img src="{{ cover.optimizedBookCover.src() }}"
      srcset="{{ cover.optimizedBookCover.srcsetWebp() }}"
      sizes="100vw" />
          </div>
          {% endfor %}
{% endif %}
        </div>
      <div class="col-span-4">

     


          {% if entry.longformContent | length %}
            {{ entry.longformContent }}
            {% endif %}

        </div>
      </div>
    </div>
  
  
</a>



   {% endblock %}