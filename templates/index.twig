<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>10 Tower Mews - {{ entry.title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
    <link href="/css/styles.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
   
</head>
<body class="ltr">
    {% include '_partials/_nav.twig' %}
    <div id="container" class="max-w-6xl mx-auto my-20 px-4">

      
        <div class="grid md:grid-cols-12 md:gap-10">
            <div class="col-span-7 prose md:prose-lg max-w-5xl">
                {% block content %}
                    {{ entry.richContent }}
                {% endblock %}
        </div>
            <div class="col-span-5">
                <h2 class="text-xl mb-4 font-medium">Blog</h2>
                {# Create an entry query with the 'section' and 'limit' parameters #}
                {% set myEntryQuery = craft.entries()
                    .section('blog')
                    .limit(5) %}

                {# Fetch the entries #}
                {% set entries = myEntryQuery.all() %}

                {# Display the entries #}
                {% for entry in entries %}
                    <article>
                        <h3 class=" mt-4 font-normal">
                            {{ entry.postDate | date('short') }} | <a href="{{ entry.url }}" class="text-blue-600">{{ entry.title }}</a>
                        </h3>
  
                                 
                    </article>
                {% endfor %}
       

  
                <h2 class="text-xl mb-4 font-normal mt-8">Places</h2>
                {# Create an entry query with the 'section' and 'limit' parameters #}
                {% set myEntryQuery = craft.entries()
                    .section('places')
                    .limit(5) %}

                {# Fetch the entries #}
                {% set entries = myEntryQuery.all() %}

                {# Display the entries #}
                {% for entry in entries %}
                <article>
                    <h3 class=" mt-4 font-normal">
                        {{ entry.postDate | date('short') }} | <a href="{{ entry.url }}" class="text-blue-600">{{ entry.title }}</a>
                    </h3>

                             
                </article>
            {% endfor %}
    

            <h2 class="text-xl mb-4 font-normal mt-8">Reading</h2>
                {# Create an entry query with the 'section' and 'limit' parameters #}
                {% set myEntryQuery = craft.entries()
                    .section('books')
                    .limit(5) %}

                {# Fetch the entries #}
                {% set entries = myEntryQuery.all() %}

                {# Display the entries #}
                {% for entry in entries %}
                <article>
                    <h3 class=" mt-4 font-normal">
                        {{ entry.postDate | date('short') }} | <a href="{{ entry.url }}" class="text-blue-600">{{ entry.title }}</a>
                    </h3>

                             
                </article>
            {% endfor %}


   
            <h2 class="text-xl mb-4 font-normal mt-8">Photos</h2>
                {# Create an entry query with the 'section' and 'limit' parameters #}
                {% set myEntryQuery = craft.entries()
                    .section('photos')
                    .limit(5) %}

                {# Fetch the entries #}
                {% set entries = myEntryQuery.all() %}

                {# Display the entries #}
                {% for entry in entries %}
                <article>
                    <h3 class=" mt-4 font-normal">
                        {{ entry.postDate | date('short') }} | <a href="{{ entry.url }}" class="text-blue-600">{{ entry.title }}</a>
                    </h3>

                             
                </article>
            {% endfor %}
    
     
        </div>
        


    </div>
    </div>
</body>
</html>
