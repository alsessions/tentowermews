{% extends "_layouts/_layout.twig" %}

   {% block content %}

    <h1>{{ entry.title }}</h1>

    {{ entry.longformContent }}


    <div class="grid md:grid-cols-3  gap-10 not-prose">
    
    {% set myEntryQuery = craft.entries()
        .section('places')
        .limit(10) %}

    {# Fetch the entries #}
    {% set entries = myEntryQuery.all() %}

    {# Display the entries #}
    {% for entry in entries %}
    <div>
        <div>
         
           {% set image = entry.image.one() %}
           <a href="{{ entry.url }}">
           <img src="{{ image.optimizedBlog.src() }}"
                srcset="{{ image.optimizedBlog.srcsetWebp() }}"
                sizes="100vw"
                class="rounded-sm mb-2 mt-10" />
           </a>
        </div>
        <div>
           <h3 class="text-xl md:text-2xl mb-2">
              <a href="{{ entry.url }}">{{ entry.title }}</a>
           </h3>
           {% if entry.description | length %}
              <p class="text-gray-700">{{ entry.description }}</p>
           {% endif %}
        </div>
     </div>
    {% endfor %}
    </div>
   {% endblock %}